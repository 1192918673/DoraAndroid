<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffebeff2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/back_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ff50525c"
            android:text="智能家居"
            android:textSize="22dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llBuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#ff7C7E88"
                    android:textSize="12sp"
                    android:layout_marginTop="12dp"
                    android:text="本功能需要使用对应的接收器套件"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_member_bg"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/ivIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_sec_logo"/>

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff333333"
                        android:layout_toRightOf="@id/ivIcon"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:text="Broadlink RM Pro"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff7C7E88"
                        android:layout_toRightOf="@id/ivIcon"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:layout_below="@id/tvTitle"
                        android:textSize="14sp"
                        android:text="智能家居遥控"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff058cfe"
                        android:textSize="16sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_border"
                        android:padding="12dp"
                        android:text="去购买"/>

                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_sec"/>

            <LinearLayout
                android:id="@+id/llSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    android:text="请将接收器开机，并确认WIFI信号灯处于闪烁状态"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff7C7E88"
                    android:layout_margin="15dp"
                    android:textSize="12sp"
                    android:lineSpacingMultiplier="1.2"
                    android:text="如果WIFI信号灯未处于闪烁状态，请使用工具（别针、牙签等细长物）按下面板上的[reset]键重置接收器。"/>

                <Button
                    android:id="@+id/btNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="15dp"
                    android:background="#00A0E8"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>