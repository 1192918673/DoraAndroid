<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/back_blue" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="更换手机"
            android:textSize="22dp" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <TextView
            android:id="@+id/et_info"
            android:text="请输入原手机号码"
            android:textColor="#BEBEBE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:paddingLeft="10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/et_old_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#00A0E8"
            android:maxLines="1"
            android:textColor="#00A0E8"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:text="请输入短信验证码"
            android:textColor="#BEBEBE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:enabled="false"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:layout_marginTop="30dp"
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#00A0E8"
            android:textColor="#00A0E8"
            android:textSize="16sp" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/bt_getcode"
            android:layout_marginRight="12dp"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取短信验证码"
            android:padding="5dp"
            android:textColor="#00A0E8"
            android:textSize="18dp" />
    </RelativeLayout>

    <Button
        android:background="#00A0E8"
        android:id="@+id/bt_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</LinearLayout>